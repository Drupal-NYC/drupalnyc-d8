{
    "name": "digitalpulp/ballast",
    "description": "A local development toolset for automating Docker setup and Drupal development.",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Shawn Duncan",
            "role": "Project Lead"
        },
        {
          "name": "Nick Main",
          "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "consolidation/robo": "^1.0",
        "cweagans/composer-patches": "^1.7.2",
        "drupal/admin_toolbar": "^3.2.1",
        "drupal/allowed_formats": "^1.1",
        "drupal/auto_entitylabel": "^3.0@beta",
        "drupal/background_image": "^1.3",
        "drupal/bones_theme": "^1.2",
        "drupal/config_readonly": "^1.0@beta",
        "drupal/config_split": "^1.4",
        "drupal/core-composer-scaffold": "^8.9.13",
        "drupal/core-recommended": "^8.9.13",
        "drupal/devel": "^4.2.1",
        "drupal/diff": "^1.0@RC",
        "drupal/easy_breadcrumb": "^2.0.0",
        "drupal/entity_embed": "^1.0",
        "drupal/extlink": "^1.1",
        "drupal/field_formatter": "^1.2",
        "drupal/field_group": "^3.0@RC",
        "drupal/focal_point": "^1.0",
        "drupal/google_analytics": "^2.2",
        "drupal/google_tag": "^1.3",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/pantheon_advanced_page_cache": "^1.0",
        "drupal/pathauto": "^1.6",
        "drupal/responsive_favicons": "^1.5",
        "drupal/scheduler_content_moderation_integration": "^1.0",
        "drupal/smart_trim": "^2.0",
        "drupal/stage_file_proxy": "^1.0",
        "drupal/textarea_widget_for_text": "^1.1",
        "drush/drush": "^10.3",
        "oomphinc/composer-installers-extender": "^2.0",
        "symfony/cache": "^3.1",
        "webflo/drupal-finder": "^1.2.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
      "drupal/core-dev": "^8.9.13",
      "mglaman/phpstan-drupal": "^0.12.12",
      "phpstan/phpstan-deprecation-rules": "^0.12.6"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "autoload": {
        "psr-4": {
          "Ballast\\": "scripts/robo/src"
        },
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "robo": "@php scripts/robo/BallastRunner.php --ansi",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-types": ["bower-asset"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
          "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
          "includes": [
            "sites/default/default.services.pantheon.preproduction.yml",
            "sites/default/settings.pantheon.php"
          ],
          "excludes": [
            ".csslintrc",
            ".editorconfig",
            ".eslintignore",
            ".eslintrc.json",
            ".htaccess",
            "web.config"
          ]
        }
    }
}
