version: "3"

services:
  database:
    image: digitalpulp/mariadb:10.2
    volumes:
      - db:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: dpulp
      MYSQL_DATABASE: drupal
      MYSQL_USER: drupal
      MYSQL_PASSWORD: drupal
    networks:
      - internal
    ports:
      - "3306"
  php:
    # image: digitalpulp/php:5.6-alpine-fpm-1.0.3
    image: digitalpulp/php:7.1-alpine-fpm-1.0.6
    volumes:
      - .:/var/www
    working_dir: /var/www/web/
    networks:
      - internal
    environment:
      XDEBUG_HOST: {host_ip}
  web:
    image: digitalpulp/nginx:stable-alpine-1.0.1
    # image: digitalpulp/apache
    depends_on:
      - database
      - php
    volumes:
      - .:/var/www
    working_dir: /var/www/web/
    environment:
      VIRTUAL_HOST: {site_shortname}.dpulp
      DOCROOT: /var/www/web
      SERVER_NAME: {site_shortname}.dpulp
    networks:
      - internal
      - proxy
  front-end:
    image: digitalpulp/front-end:1.0.13
    environment:
      THEME_NAME: {site_theme_name}
    depends_on:
      - web
    volumes:
      - .:/var/www
    networks:
      - internal
    working_dir: /var/www/web/themes/custom/{site_theme_name}
  cli:
    image: digitalpulp/cli:7.1-alpine-cli-1.0.12
    depends_on:
      - database
      - php
      - web
    volumes:
      - .:/var/www
    working_dir: /var/www/web/
    networks:
      - internal
    environment:
      XDEBUG_HOST: {host_ip}
      PHP_IDE_CONFIG: serverName={site_shortname}.dpulp
#  solr:
#    image: wodby/drupal-solr:8-5.5-2.3.0
#    environment:
#      SOLR_HEAP: 1024m
#    networks:
#      - internal
volumes:
  db:
networks:
  internal:
  proxy:
    external:
      name: proxynet
