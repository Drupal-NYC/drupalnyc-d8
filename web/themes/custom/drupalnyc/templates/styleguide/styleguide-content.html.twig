{% set url = 'https://www.google.com' %}
{% set content_demo %}
<p>Item content</p>
{% endset %}


<a id='accordion-group'></a>
<h2 class='styleguide'>Accordion Group</h2>
<div class='styleguide'>
  {% embed "drupalnyc:accordion-group" with {
    attributes: create_attribute(),
    accordion_group_title: 'Example Accordion Group',
  } %}
    {% block accordion_group_items %}
      {{ include('drupalnyc:accordion', {
      accordion_title: 'Example Accordion - 1',
      accordion_content: content_demo,
      accordion_expand_icon: 'icon-plus',
      accordion_collapse_icon: 'icon-minus',
    })}}
      {{ include('drupalnyc:accordion', {
      accordion_title: 'Example Accordion - 2',
      accordion_content: content_demo,
      accordion_expand_icon: 'icon-plus',
      accordion_collapse_icon: 'icon-minus',
    })}}
    {% endblock  %}
  {% endembed %}
</div>

<a id='accordion'></a>
<h2 class='styleguide'>Accordion
</h2>
<div class='styleguide'>
  {{ include('drupalnyc:accordion', {
      accordion_title: 'Example Single Accordion',
      accordion_content: content_demo,
      accordion_expand_icon: 'icon-plus',
      accordion_collapse_icon: 'icon-minus',
    })}}
</div>

<a id='button'></a>
<h2 class='styleguide'>Button</h2>
<div class='styleguide'>
  {{ include('drupalnyc:button', {
  button_link: {url: url, title: 'Example button'},
